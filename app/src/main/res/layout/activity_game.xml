<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/second"
        tools:context=".GameActivity" android:gravity="center_horizontal">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:text="ქულა"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView" android:layout_weight="1"
                android:textSize="16sp" android:textStyle="bold" android:layout_marginTop="5dp"/>
        <TextView
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textViewScore" android:layout_weight="1"
                android:textSize="16sp" android:textStyle="bold" android:layout_marginTop="5dp"/>
        <TextView
                android:text="სიცოცხლე"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView3" android:layout_weight="1"
                android:textSize="16sp" android:textStyle="bold" android:layout_marginTop="5dp"/>
        <TextView
                android:text="3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textViewLife" android:layout_weight="1"
                android:textSize="16sp" android:textStyle="bold" android:layout_marginTop="5dp"/>
        <TextView
                android:text="დრო"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView5" android:layout_weight="1"
                android:textSize="16sp" android:textStyle="bold" android:layout_marginTop="5dp"/>
        <TextView
                android:text="60"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textViewTime" android:layout_weight="1"
                android:textSize="16sp" android:textStyle="bold" android:layout_marginTop="5dp"/>
    </LinearLayout>
    <TextView
            android:text="TextView"
            android:layout_width="300dp"
            android:layout_height="75dp" android:id="@+id/textViewQuestion" android:textSize="20sp"
            android:gravity="center"
            android:background="@color/DarkBlue" android:layout_marginTop="20dp" android:textColor="@color/AliceBlue"/>
    <EditText
            android:layout_width="300dp"
            android:layout_height="75dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editTextAnswer" android:textColor="@color/AliceBlue" android:hint="დაწერე შენი პასუხი..."
            android:gravity="center" android:textColorHint="@color/Black" android:textSize="24sp"
            android:background="@color/DarkBlue" android:layout_marginTop="20dp"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <Button
                android:text="დადასტურება"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/buttonOk" android:layout_weight="1"
                android:backgroundTint="@color/LightSkyBlue" android:layout_marginTop="50dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp" android:textColor="@color/Blue" android:textSize="16sp"/>
        <Button
                android:text="შემდეგი >"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/buttonNext" android:layout_weight="1"
                android:backgroundTint="@color/LightSkyBlue" android:layout_marginTop="50dp"
                android:layout_marginLeft="5dp" android:layout_marginRight="5dp" android:textColor="@color/Blue"
                android:textSize="16sp"/>
    </LinearLayout>
</LinearLayout>