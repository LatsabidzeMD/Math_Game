<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/third"
        tools:context=".ResultActivity" android:gravity="center_horizontal">

    <TextView
            android:text="გილოცავ!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView2" android:textSize="34sp"
            android:layout_marginTop="50dp" android:textStyle="bold" android:textColor="@color/DarkBlue"/>
    <TextView
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textViewResult" android:textSize="24sp"
            android:layout_marginTop="150dp" android:textColor="@color/DarkBlue" android:background="@color/AliceBlue"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_marginTop="150dp">
        <Button
                android:text="თავიდან"
                android:layout_width="200dp"
                android:layout_height="wrap_content" android:id="@+id/buttonAgain" android:layout_weight="1"
                android:layout_margin="10dp" android:backgroundTint="?android:attr/textColorTertiaryInverse"
                android:textColor="@color/Blue"
                android:textSize="20sp" android:textStyle="bold"/>
        <Button
                android:text="დასრულება"
                android:layout_width="200dp"
                android:layout_height="wrap_content" android:id="@+id/buttonExit" android:layout_weight="1"
                android:layout_margin="10dp" android:backgroundTint="?android:attr/textColorTertiaryInverse"
                android:textColor="@color/Blue"
                android:textSize="20sp" android:textStyle="bold"/>
    </LinearLayout>
</LinearLayout>